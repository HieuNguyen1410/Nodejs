<!-- HTML !-->
<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/order.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="container">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Date</th>
                    <th scope="col">Workplace</th>
                    <th scope="col">StartDate</th>
                    <th scope="col">Enddate</th>
                    <th scope="col">SumWork</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (registers.length > 0) { %> 
                        <% for (let i = 0; i < registers.length; i++) { %>
                            <tr>
                                <th scope="row"><%= i + 1 %></th>
                                <td><%= registers[i].date.toISOString() %></td>
                                <td><%= registers[i].workplace %></td>
                                <td><%= registers[i].startwork %></td>
                                <td><%= registers[i].endwork %></td>
                                <td><%= registers[i].sumwork %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
              </table>
              <div><b>Register AnnualLeave</b>  : <%= annualLeave %> h</div>
              <div><b>SumWork Today</b>  : <%= sumwork %> h</div>
              <div><b>overTime</b>  : <%= overTime %> h</div>
              <div><b>Salary <%= month + 1 %></b>  : <%= salaries %> $</div>
        </div>
        <%- include('../includes/end.ejs') %>




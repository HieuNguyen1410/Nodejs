<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <br>
        <form action="/covid/addCovid" method="POST">
          <div class="form-group row">
            <label for="temperature" class="col-sm-2 col-form-label">Temperature</label>
            <div class="col-sm-10">
              <input type="Number" class="form-control" id="temperature" name="temperature">
            </div>
          </div>
          <div class="form-group row">
            <label for="injection1" class="col-sm-2 col-form-label">1. injection</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="injection1" name="injection1">
            </div>
            <label for="date1" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-4">
              <input type="date" class="form-control" id="date1" name="date1">
            </div>
          </div>
          <div class="form-group row">
            <label for="injection2" class="col-sm-2 col-form-label">2. injection</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="injection2" name="injection2">
            </div>
            <label for="date2" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-4">
              <input type="date" class="form-control" id="date2" name="date2">
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Infected</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="infected" id="infected1" value="yes" >
                  <label class="form-check-label" for="infected1">
                    Yes
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="infected" id="infected2" value="no">
                  <label class="form-check-label" for="infected2">
                    No
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>



    <%- include('../includes/end.ejs') %>
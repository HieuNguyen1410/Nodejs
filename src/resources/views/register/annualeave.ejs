<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <br>
        <form action="/salary" method="POST">
            <div class="form-group row">
              <label for="startdate" class="col-sm-2 col-form-label">Start</label>
              <div class="col-sm-4">
                <input type="date" id="startdate" name="startdate" class="form-control" value="<%= startdate %>">
              </div>
              <label for="enddate" class="col-sm-2 col-form-label">To</label>
              <div class="col-sm-4">
                <input type="date" id="enddate" name="enddate" class="form-control" value="<%= enddate %>">
              </div>
            </div>
            <div class="form-group row">
                <label for="annualLeave" class="col-sm-2 col-form-label">AnnualLeave</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control" id="annualLeave" name="annualLeave" value="<%= annualLeave %>">
                </div>
              </div>
            <div class="form-group row">
              <label for="reason" class="col-sm-2 col-form-label">Reason</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="reason" name="reason" value="<%= reason %>">
              </div>
            </div>
            <div class="form-group row">
              <label for="hours" class="col-sm-2 col-form-label">Select Hours</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="hours" name="hours" value="<%= hours %>">
              </div>
            <% if (isAnnualLeave) { %>
            <button type="submit" class="btn btn-primary">Submit</button>
            <% } else { %> 
              <div></div>
            <% } %>
          </form>
    </div>



    <%- include('../includes/end.ejs') %>
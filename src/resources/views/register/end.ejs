<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <br />
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="{{staff.image}}" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>{{staff.name}}</h4>
                      <p class="text-secondary mb-1">Full Stack Developer</p>
                      <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Id</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff._id}}
                    </div>
                  </div> 
                  <hr>                 
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.name}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">doB</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.doB}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">salaryScale</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.salaryScale}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">startDate</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.startDate}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">department</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.department}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">annualLeave</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.annualLeave}}
                    </div>
                  </div> 
                  <hr>   
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Image</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{staff.image}}
                    </div>
                  </div> 
                  <hr>                                  
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Edit</a>
                    </div>
                  </div>
                </div>
              </div>
          </div>
    </div>
    <%- include('../includes/end.ejs') %>